---
export interface Props {
  description: string;
  skills: string[];
}

const { description, skills } = Astro.props;
---

<section id="about" class="py-16 md:py-20 bg-gray-50">
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <!-- Mobile: Title first, centered -->
    <div class="lg:hidden text-center mb-12">
      <h2 class="text-4xl font-bold text-gray-900 animate-fade-in">
        À propos de <span class="text-primary-600">moi</span>
      </h2>
    </div>

    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Image -->
      <div class="animate-fade-in">
        <div class="flex justify-center">
          <div class="h-[360px] :w-[288px] md:h-[480px] md:w-[384px] bg-white rotate-3 p-4 shadow-2xl">
            <div class="w-full h-[calc(100%-50px)] bg-gray-100 overflow-hidden">
              <img
                src="/images/about-me.jpg"
                alt="Photo de profil"
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        </div>
      </div>

      <!-- Content -->
      <div class="animate-slide-up">
        <!-- Desktop: Title visible, Mobile: Title hidden -->
        <h2 class="hidden lg:block text-4xl lg:text-5xl font-bold text-gray-900 mb-8">
          À propos de <span class="text-primary-600">moi</span>
        </h2>



        <div class="prose prose-lg text-gray-600 mb-8">
          <p class="md:text-xl leading-relaxed whitespace-pre-line">{description}</p>
        </div>

        <div class="mb-8">
          <h3 class="text-2xl font-semibold text-gray-900 mb-6">Compétences principales</h3>
          <div class="flex flex-wrap gap-3">
            {skills.map((skill) => (
              <span class="bg-white px-4 py-2 rounded-full text-primary-700 font-medium shadow-md border border-primary-100 hover:bg-primary-50 transition-colors">
                {skill}
              </span>
            ))}
          </div>
        </div>

        <div class="text-center md:text-left">
          <a
            href="#contact"
            class="bg-primary-600 text-white px-8 py-4 rounded-full font-semibold hover:bg-primary-700 transform hover:-translate-y-1 transition-all duration-300 shadow-lg hover:shadow-xl block md:inline-block"
          >
            Me contacter
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
