---
export interface Props {
  description: string;
  skills: string[];
}

const { description, skills } = Astro.props;
---

<section id="about" class="py-20 bg-gray-50">
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-16 items-center">

      <!-- Image -->
      <div class="order-2 lg:order-1 animate-fade-in">
        <div class="relative">
          <div class="aspect-square rounded-2xl bg-gradient-to-br from-primary-100 to-primary-200 p-8 flex items-center justify-center shadow-2xl">
            <div class="text-center">
              <div class="w-32 h-32 bg-primary-300 rounded-full mx-auto mb-6 flex items-center justify-center">
                <svg class="w-16 h-16 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <p class="text-primary-700 font-medium text-lg">Photo professionnelle</p>
              <p class="text-primary-600 text-sm mt-2">Format: 400x400px<br/>JPG ou PNG</p>
            </div>
          </div>

          <!-- Decorative elements -->
          <div class="absolute -top-4 -right-4 w-24 h-24 bg-primary-200 rounded-full opacity-50"></div>
          <div class="absolute -bottom-6 -left-6 w-20 h-20 bg-secondary-200 rounded-full opacity-40"></div>
        </div>
      </div>

      <!-- Content -->
      <div class="order-1 lg:order-2 animate-slide-up">
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-8">
          À propos de <span class="text-primary-600">moi</span>
        </h2>

        <div class="prose prose-lg text-gray-600 mb-8">
          <p class="text-xl leading-relaxed">{description}</p>
        </div>

        <div class="mb-8">
          <h3 class="text-2xl font-semibold text-gray-900 mb-6">Compétences principales</h3>
          <div class="flex flex-wrap gap-3">
            {skills.map((skill) => (
              <span class="bg-white px-4 py-2 rounded-full text-primary-700 font-medium shadow-md border border-primary-100 hover:bg-primary-50 transition-colors">
                {skill}
              </span>
            ))}
          </div>
        </div>

        <div class="flex gap-4">
          <a
            href="/cv.pdf"
            target="_blank"
            class="bg-primary-600 text-white px-8 py-4 rounded-full font-semibold hover:bg-primary-700 transform hover:-translate-y-1 transition-all duration-300 shadow-lg hover:shadow-xl"
          >
            Télécharger CV
          </a>
          <a
            href="#contact"
            class="border-2 border-primary-600 text-primary-600 px-8 py-4 rounded-full font-semibold hover:bg-primary-600 hover:text-white transform hover:-translate-y-1 transition-all duration-300"
          >
            Me contacter
          </a>
        </div>
      </div>
    </div>
  </div>
</section>