---
export interface Props {
  name: string;
  title: string;
  subtitle: string;
}

const { name, title, subtitle } = Astro.props;
---

<section class="min-h-screen flex items-center bg-gradient-to-br from-primary-500 to-secondary-500 text-white">
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">

      <!-- Content -->
      <div class="animate-slide-in-left">
        <h1 class="text-5xl lg:text-6xl font-bold mb-6 bg-gradient-to-r from-white to-gray-100 bg-clip-text text-transparent">
          {name}
        </h1>
        <h2 class="text-2xl lg:text-3xl font-semibold mb-6 text-primary-100">
          {title}
        </h2>
        <p class="text-xl lg:text-2xl mb-8 text-primary-100 max-w-lg leading-relaxed">
          {subtitle}
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="#projects"
            class="bg-white text-primary-600 px-8 py-4 rounded-full font-semibold text-lg hover:bg-gray-100 transform hover:-translate-y-1 transition-all duration-300 shadow-lg hover:shadow-xl text-center"
          >
            Voir mes projets
          </a>
          <a
            href="#contact"
            class="border-2 border-white text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-white hover:text-primary-600 transform hover:-translate-y-1 transition-all duration-300 text-center"
          >
            Me contacter
          </a>
        </div>
      </div>

      <!-- Image/Avatar -->
      <div class="flex justify-center lg:justify-end animate-slide-in-right">
        <div class="relative">
          <div class="w-80 h-80 lg:w-96 lg:h-96 rounded-full bg-white/10 backdrop-blur-sm border-4 border-white/20 flex items-center justify-center shadow-2xl">
            <div class="text-center p-8">
              <div class="w-24 h-24 bg-white/20 rounded-full mx-auto mb-4 flex items-center justify-center">
                <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <p class="text-lg font-medium">Votre photo professionnelle</p>
              <p class="text-sm text-white/80 mt-2">Ajoutez votre image dans /public/</p>
            </div>
          </div>

          <!-- Floating elements -->
          <div class="absolute -top-4 -right-4 w-20 h-20 bg-white/10 rounded-full animate-pulse"></div>
          <div class="absolute -bottom-6 -left-6 w-16 h-16 bg-white/10 rounded-full animate-pulse delay-75"></div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>