---
export interface Props {
  name: string;
  title: string;
  subtitle: string;
}

const { name, title, subtitle } = Astro.props;
---

<section class="min-h-screen bg-gradient-to-br from-primary-500 to-secondary-500 text-white overflow-hidden relative">
  <div class="absolute inset-0 flex">
    <div class="max-w-7xl mx-auto px-6 lg:px-8 w-full flex flex-col lg:flex-row items-center relative z-10">

      <!-- Content Section -->
      <div class="lg:w-1/2 flex flex-col justify-center py-10 lg:py-20 animate-slide-in-left">
        <h1 class="text-5xl text-center md:text-left lg:text-7xl font-bold mb-6 lg:mb-8 bg-gradient-to-r from-white to-gray-100 bg-clip-text text-transparent">
          {name}
        </h1>
        <h2 class="text-3xl lg:text-8xl text-center md:text-left font-bold mb-6 lg:mb-8 text-white whitespace-pre-line leading-8">
          {title}
        </h2>
        <p class="text-lg lg:text-2xl text-center md:text-left mb-6 lg:mb-8 text-primary-100 max-w-lg leading-relaxed">
          {subtitle}
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="#projects"
            class="bg-white text-primary-600 px-8 py-4 rounded-full font-semibold text-lg hover:bg-gray-100 transform hover:-translate-y-1 transition-all duration-300 shadow-lg hover:shadow-xl text-center"
          >
            Voir mes projets
          </a>
          <a
            href="#contact"
            class="border-2 border-white text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-white hover:text-primary-600 transform hover:-translate-y-1 transition-all duration-300 text-center"
          >
            Me contacter
          </a>
        </div>
      </div>

      <!-- Image Section -->
      <div class="lg:w-1/2 flex justify-center lg:justify-end animate-slide-in-right lg:absolute lg:right-0 lg:bottom-0 lg:h-full order-first lg:order-last mt-20 lg:mt-0">
        <div class="flex items-start lg:items-end h-full">
          <!-- Professional Photo -->
          <img
            src="/images/hero-me.png"
            alt="Photo professionnelle"
            class="w-60 md:w-80 lg:w-full lg:max-h-[74vh] object-contain object-top lg:object-bottom drop-shadow-2xl transform hover:scale-105 transition-transform duration-300"
          />
        </div>
      </div>
    </div>
  </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>
