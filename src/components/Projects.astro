---
import ProjectsWithModal from './ProjectsWithModal.tsx';

export interface Props {
  projects: {
    title: string;
    subtitle: string;
    description: string;
    altText?: string;
    mockup: string;
    screenshot: string;
    technologies: string[];
    features: string[];
    liveUrl?: string;
  }[];
}

const { projects } = Astro.props;
---

<section id="projects" class="py-16 md:py-20 bg-dark-section">
  <div class="max-w-[90rem] mx-auto px-6 lg:px-8">
    <div class="text-center mb-16 animate-fade-in">
      <h2 class="text-4xl lg:text-5xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-br from-white via-primary-100 to-secondary-500">
        Mes projets
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Des idées transformées en expériences digitales
      </p>
    </div>

    <!-- Projects Grid with Modal -->
    <ProjectsWithModal projects={projects} client:load />
  </div>
</section>
