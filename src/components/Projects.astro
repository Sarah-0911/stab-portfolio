---
export interface Props {
  projects: {
    title: string;
    description: string;
    image?: string;
    technologies: string[];
    liveUrl?: string;
    githubUrl?: string;
    featured?: boolean;
  }[];
}

const { projects } = Astro.props;
---

<section id="projects" class="py-16 md:py-20 bg-gray-50">
  <div class="max-w-[90rem] mx-auto px-6 lg:px-8">
    <div class="text-center mb-16 animate-fade-in">
      <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
        Mes <span class="text-primary-600">projets</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Une sélection de projets qui démontrent mes compétences et ma passion pour le développement front-end
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="grid lg:grid-cols-2 gap-8">
      {projects.map((project, index) => (
        <article
          class="group overflow-hidden relative bg-gray-800 border border-gray-700 h-[400px] rounded-2xl flex flex-col lg:flex-row lg:gap-6 hover:shadow-2xl hover:border-primary-400 transition-all duration-300 cursor-pointer animate-slide-up"
          style={`animation-delay: ${index * 200}ms`}
        >

          <div class="flex flex-col gap-4 w-full items-start p-6 lg:p-8 text-left lg:flex-1">
            <h3 class="text-left text-xl md:text-2xl font-medium tracking-tighter bg-clip-text text-transparent bg-gradient-to-br from-white via-white to-primary-300 group-hover:to-primary-200 transition-all duration-300">
              {project.title}
            </h3>
            <p class="w-full text-gray-300 text-left text-sm md:text-base font-light tracking-tight leading-relaxed text-balance">
              {project.description}
            </p>
            <img
              src={project.image}
              alt={project.title}
              loading="lazy"
              class="object-contain w-full h-full group-hover:scale-105 transition-transform duration-500"
              width="1920"
              height="1080"
              decoding="async"
            />
          </div>
        </article>
      ))}
    </div>

    <!-- GitHub CTA -->
    <div class="text-center mt-16 animate-fade-in">
      <p class="text-gray-600 mb-6">Vous voulez voir plus de mes travaux ?</p>
      <a
        href="https://github.com/votre-username"
        target="_blank"
        rel="noopener noreferrer"
        class="bg-gray-900 text-white px-8 py-4 rounded-full font-semibold hover:bg-gray-800 transform hover:-translate-y-1 transition-all duration-300 shadow-lg hover:shadow-xl inline-flex items-center gap-3"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
        </svg>
        Voir plus sur GitHub
      </a>
    </div>
  </div>
</section>
