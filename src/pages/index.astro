---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import TechStack from '../components/TechStack.astro';
import Projects from '../components/Projects.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import { portfolioData } from '../data/portfolio';
---

<Layout
  title={`${portfolioData.name} - ${portfolioData.title}`}
  description={`Portfolio de ${portfolioData.name}, ${portfolioData.title.toLowerCase()}. ${portfolioData.subtitle}`}
>
  <Navigation />

  <Hero
    presentation={portfolioData.presentation}
    name={portfolioData.name}
    title={portfolioData.title}
    subtitle={portfolioData.subtitle}
  />

  <About
    description={portfolioData.description}
    skills={portfolioData.skills}
  />

  <TechStack
    stacks={portfolioData.stacks}
  />

  <Projects
    projects={portfolioData.projects}
  />

  <Contact
    email={portfolioData.contact.email}
    phone={portfolioData.contact.phone}
    linkedin={portfolioData.contact.linkedin}
    github={portfolioData.contact.github}
  />

  <Footer
    name={portfolioData.name}
    email={portfolioData.contact.email}
    linkedin={portfolioData.contact.linkedin}
    github={portfolioData.contact.github}
  />
</Layout>
